 
      <h2 class="page-header" > Register</h2>   
      <form action="/users" method="POST">
    <div class="form-row">
      <div class="form-item">
        <div class="form-item">
          <label for="name">Nome</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Digite o seu Nome"
            value="<%= typeof name != 'undefined' ? name : '' %>" />
        </div>
      </div>
     
      <div class="form-item">
        <div class="form-item">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Digite o seu Email"
            value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
      </div>
    </div>

      <div class="form-row">
        <div class="form-item">
        <div class="form-item">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Digite a  Password"
            value="<%= typeof password != 'undefined' ? password : '' %>" />
        </div>
        </div>
          <div class="form-item"> 
          <div class="form-item">      
          <label for="password2">Confirm Password</label>
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirma a Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
        </div>
        </div>
      </div>
              
        
        
        <button type="submit" class="btn btn-primary">
          Register
        </button>
      
    </div>
    
      </form>
     